//
// Button base styles and mixins
// ––––––––––––––––––––––––––––––––––––––––––––––––

// Button mixin
button-base($background-base, $background-hover, $text-base, $text-hover)
  background-color $background-base	
  border 1px solid $background-base 
  border-radius $global-border-radius   
  color $text-base  
  cursor pointer  
  display inline-block
  font-size rem(16px)
  letter-spacing normal
  line-height rem(30px)
  padding rem(10px) (32px)  
  text-align center
  text-decoration none
  text-tranform none  
  transition all $duration $easing

  &:hover 
    color $text-hover
    background-color $background-hover
    border 1px solid $background-hover
    
  &:focus
  	outline 0
  	border 1px solid darken($background-hover, 20%)
